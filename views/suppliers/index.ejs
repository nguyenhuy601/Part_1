<%- include('../partials/header') %>
<h2>Suppliers</h2>
<a href="/suppliers/new" class="btn btn-primary mb-3">Add New Supplier</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th><th>Address</th><th>Phone</th><th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a href="/suppliers/<%= s._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <form action="/suppliers/<%= s._id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
