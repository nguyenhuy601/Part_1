<%- include('../partials/header') %>
<h2>Edit Product</h2>

<form action="/products/<%= product._id %>?_method=PUT" method="POST" class="mt-3">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" name="name" class="form-control" value="<%= product.name %>" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Price</label>
    <input type="number" name="price" class="form-control" step="0.01" value="<%= product.price %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Quantity</label>
    <input type="number" name="quantity" class="form-control" value="<%= product.quantity %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Supplier</label>
    <select name="supplierId" class="form-control">
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" <%= product.supplierId.equals(s._id) ? "selected" : "" %>>
          <%= s.name %>
        </option>
      <% }) %>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Update</button>
  <a href="/products" class="btn btn-secondary">Cancel</a>
</form>
<%- include('../partials/footer') %>
